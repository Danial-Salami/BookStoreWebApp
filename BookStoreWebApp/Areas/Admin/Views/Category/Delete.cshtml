@model Category

<div class="card shadow border-2 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12 my-1 ">
                    <input asp-for="Name" class="form-control border-2 shadow" disabled />
                    <label asp-for="Name" class="ms-2 text-dark fw-bold"></label>
                </div>
                <div class="form-floating py-2 col-12 my-2 ">
                    <input asp-for="DisplayOrder" class="form-control border-2 shadow" disabled />
                    <label asp-for="DisplayOrder" class="ms-2 text-dark fw-bold"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-danger form-control" type="submit">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border-1 form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



