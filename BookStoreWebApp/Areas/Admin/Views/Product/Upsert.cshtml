@model ProductVM


<div class="card shadow border-2 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">@(Model.Product.Id != 0?"Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Product.Id" />
            <div class="border-2 p-3">
               
                <div class="form-floating py-2 col-12 my-1 ">
                    <input asp-for="Product.Title" class="form-control border-2 shadow" />
                    <label asp-for="Product.Title" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.Author" class="form-control border-2 shadow" />
                    <label asp-for="Product.Author" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.ISBN" class="form-control border-2 shadow" />
                    <label asp-for="Product.ISBN" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <textarea asp-for="Product.Description" class="form-control border-2 shadow"></textarea>
                    <label asp-for="Product.Description" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.ListPrice" class="form-control border-2 shadow" />
                    <label asp-for="Product.ListPrice" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.Price" class="form-control border-2 shadow" />
                    <label asp-for="Product.Price" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.Price50" class="form-control border-2 shadow" />
                    <label asp-for="Product.Price50" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Product.Price100" class="form-control border-2 shadow" />
                    <label asp-for="Product.Price100" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-2 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input type="file" class="form-control border-2 shadow" />
                    <label asp-for="Product.ImageUrl" class="ms-2 text-dark fw-bold"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-success form-control" type="submit">
                            @(Model.Product.Id != 0 ? "Update" : "Create")
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-1 form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div>


</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


