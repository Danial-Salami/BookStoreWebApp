@model Product

<div class="card shadow border-2 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="border-2 p-3">

                <div class="form-floating py-2 col-12 my-1 ">
                    <input asp-for="Title" class="form-control border-2 shadow" disabled />
                    <label asp-for="Title" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Author" class="form-control border-2 shadow" disabled />
                    <label asp-for="Author" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="ISBN" class="form-control border-2 shadow" disabled />
                    <label asp-for="ISBN" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <textarea asp-for="Description" class="form-control border-2 shadow" disabled></textarea>
                    <label asp-for="Description" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="ListPrice" class="form-control border-2 shadow" disabled />
                    <label asp-for="ListPrice" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Price" class="form-control border-2 shadow" disabled />
                    <label asp-for="Price" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Price50" class="form-control border-2 shadow" disabled />
                    <label asp-for="Price50" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <input asp-for="Price100" class="form-control border-2 shadow" disabled />
                    <label asp-for="Price100" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12 my-2">
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-2 shadow" disabled>
                        <option disabled selected >--Select Category--</option>
                    </select>
                    <label asp-for="CategoryId" class="ms-2 text-dark fw-bold"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>

                </div>
              
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-danger form-control" type="submit">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-1 form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



