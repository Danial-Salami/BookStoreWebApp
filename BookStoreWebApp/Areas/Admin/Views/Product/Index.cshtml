@model List<Product>


<div class="card shadow border-1 mt-4">
    <div class="card-header ml-0 py-3 bg-dark  ">
        <div class="row ">
            
                <div class="col-12 text-center">
                    <h2 class="text-white py-2"> Product List</h2>
                </div>
         
           
        </div>
    </div>
    <div class="card-body p-4 ">
        <div class="row pb-3">

            <div class="col-6">
               
            </div>
            <div class="col-6 text-end ">
                <a class="btn btn-success" asp-controller="Product" asp-action="Upsert">
                    <i class="bi bi-plus-circle"></i> Create Product
                </a>
            </div>
        </div>

        <table class="table table-striped table-bordered w-100">
            <thead>
                <tr >
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        ISBN
                    </th>
                  
                    <th>
                        ListPrice
                    </th>
                    <th>
                        Category
                    </th>
                  
                    <th>

                    </th>
                </tr>
            </thead>
            
            <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr >
                            <td>
                                @obj.Title
                            </td>
                            <td>
                                @obj.Author
                            </td>
                            <td>
                                @obj.ISBN
                            </td>
                       
                            <td>
                                @obj.ListPrice
                            </td>
                            <td>
                                @obj.Category.Name
                            </td>
                      
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-info mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }

            </tbody>
            
        </table>
    </div>
</div>
